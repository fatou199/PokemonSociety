<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head'); %>
</head>

<body class="container">
    <header>
        <%- include('../../partials/header'); %>
    </header>
    <main>

        <a href="/pokemon/<%= eggs[0].id %>" class="mt-4 ml-2 inline-flex items-center px-4 py-2 text-white bg-gray-800 hover:bg-gray-600 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M19 12H5"></path>
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 19l-7-7 7-7"></path>
            </svg>
            Retour
        </a>
        

        <div class="w-full max-w-md mx-auto mt-5 bg-gray-800 border border-gray-700 rounded-lg shadow sm:p-8">
            <div class="flex items-center justify-between mb-4">
                <h5 class="text-xl font-bold leading-none text-gray-900 dark:text-white capitalize">
                    <%= eggs[0].nom %>
                </h5>
            </div>
            <% eggs.forEach((egg) => { %>
                <div class="flow-root">
                    <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700">
                        <li class="py-3 sm:py-4">
                            <div class="flex items-center">
                                <div class="flex-1 min-w-0 ms-4">
                                    <p class="text-sm font-medium text-gray-900 truncate dark:text-white">
                                        Egg: <%= egg.identifier %>
                                    </p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            <% }) %>
        </div>
    </main>
</body>
<footer>
    <%- include('../../partials/footer'); %>
</footer>

</html>